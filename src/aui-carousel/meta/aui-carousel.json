{
    "aui-carousel": {
        "requires": [
            "anim",
            "node-event-delegate",
            "aui-image-viewer-base"
        ],
        "skinnable": true
    },

    "aui-carousel-swipe": {
        "requires": [
            "aui-carousel",
            "aui-widget-swipe",
            "base-build"
        ],
        "skinnable": true
    },

    "aui-carousel-touch": {
        "requires": [
            "aui-carousel-swipe",
            "base-build"
        ],
        "condition": {
            "trigger": "aui-carousel",
            "ua": "touchEnabled"
        }
    }
}
